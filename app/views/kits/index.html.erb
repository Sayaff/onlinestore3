<p id="notice"><%= notice %></p>

<h1>Listing Kits</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Containment</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kits.each do |kit| %>
      <tr>
        <td><%= kit.title %></td>
        <td><%= kit.containment %></td>
        <td><%= image_tag kit.image.url(:medium)%></td>
        <% if session[:currency] == "RUB" %>
        <td><%= kit.price_rub %></td>
        <% else %>
        <td><%= kit.price_usd %></td>
        <% end %>
        <td><%= kit.description %></td>
        <td><%= link_to 'Show', kit %></td>
        <td><%= link_to 'Edit', edit_kit_path(kit) %></td>
        <td><%= link_to 'Destroy', kit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add to Cart', create_kit_cart_item_path(id: kit.id), method: 'POST' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

