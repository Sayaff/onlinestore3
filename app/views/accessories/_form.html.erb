<%= simple_form_for(@accessory) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :manufacturer %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
