<p id="notice"><%= notice %></p>

<h1>Listing Accessories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Manufacturer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accessories.each do |accessory| %>
      <tr>
        <td><%= accessory.title %></td>
        <td><%= accessory.description %></td>
        <td><%= accessory.price %></td>
        <td><%= accessory.manufacturer %></td>
        <td><%= link_to 'Show', accessory %></td>
        <td><%= link_to 'Edit', edit_accessory_path(accessory) %></td>
        <td><%= link_to 'Destroy', accessory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add to Cart', create_accessory_cart_item_path(id: accessory.id), method: 'POST' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

