<%= simple_form_for(@pattern) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title_ru %>
    <%= f.input :title_en %>
    <%= f.input :description_ru %>
    <%= f.input :description_en %>
    <%= f.input :price_usd %>
    <%= f.input :price_rub %>
    <%= f.input :designer %>
    <%= f.input :size %>
    <%= f.input :category %>
    <%= f.input :image, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
