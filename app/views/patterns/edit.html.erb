<div id="edit_page" class="col-md-8 col-md-offset-2">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1><%= t "views.patterns.form_edit" %></h1>
      </div>
      <div class="panel-body">
          <%= render 'form' %>
          <%= link_to 'Show', @pattern %> |
          <%= link_to 'Back', patterns_path %>

        <div class="current_image">
          <strong class="center"><%= t "views.common.current_image" %></strong>
          <%= image_tag @pattern.image.url(:medium) %>
        </div>
      </div>
    </div>
  </div>
</div>
