<div class="container">
  <div class="row">
    <div class="col-md-6">
      <img src="<%= image_path @pattern.image.url %>" alt="" class="img-responsive">
        <div class="text-center top-10">
          <%= link_to @pattern.image.url, :class => "image_element" do %>
            <i class="fa fa-plus-circle fa2x" aria-hidden="true"></i> <%= t("views.common.magnify") %>
          <% end %>
        </div>
    </div>

      <div class="col-md-6">
        <div class="row">

          <div class="col-md-12">
            <% if I18n.locale == :en %>
              <h1>
                <%= @pattern.title_en %>
              </h1>
            <% else %>
              <h1>
                <%= @pattern.title_ru %>
              </h1>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">
            <span class="sr-only">Four out of Five Stars</span>
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
            <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
            <span class="label label-success">61</span><!-- make rating later -->
         </div>
        </div>

        <div class="row">
          <div class="col-md-12 bottom-rule">
            <% if session[:currency] == "RUB" %>
              <h2 class="product-price">
                <strong><%= t "views.common.price" %></strong>
                <%= number_to_currency(@pattern.price_rub, :unit => 'â‚½') %>
              </h2>
            <% else %>
              <h2 class="product-price">
                <strong><%= t "views.common.price" %></strong>
                <%= number_to_currency(@pattern.price_usd, :unit => '$') %>
              </h2>
            <% end %>
          </div>
        </div>

        <div class="row add-to-cart">
          <div class="col-md-5 text-left">
            <h3><%= t("views.common.in_stock") %></h3>
          </div>
          <div class="col-md-4">
            <%= link_to create_pattern_cart_item_path(id: @pattern.id), method: 'POST', :class => "btn btn-primary outline btn-lg btn-full-width" do %>
              <i class="fa fa-cart-plus fa-2x" aria-hidden="true"></i> <%= t("views.common.add_to_cart") %>
            <% end %>
          </div>
        </div>

        <div class="row top-10">
        </div>

        <div class="row">
          <div class="col-md-4 col-md-offset-5 top-ten">
          <%= link_to cart_items_path, :class => "btn btn-danger outline btn-lg btn-full-width" do %>
            <i class="fa fa-shopping-cart fa-2x" aria-hidden="true"></i> <%= t("application.navbar.my_cart") %>
          <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-12 bottom-rule top-10"></div>
        </div>

        <div class="row">
          <div class="col-md-12 top-10">
            <h4>
              <strong>Designer:</strong>
              <%= @pattern.designer %>
            </h4>
          <div class="top-20">
            <h4>
              <strong>Size:</strong>
              <%= @pattern.size %>
            </h4>
          </div>
          <div class="top-20">
            <h4>
              <strong>Category:</strong>
              <%= @pattern.category %>
            </h4>
          </div>
          </div>
        </div>

      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active">
          <a href="#description"><%= t("activerecord.attributes.accessory.description") %></a>
        </li>
      </ul>
      <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="description">
          <% if I18n.locale == :en %>
            <p class="description top-10">
              <%= @pattern.description_en %>
            </p>
          <% else %>
            <p class="description top-10">
              <%= @pattern.description_ru %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
      <div class="btn-group pull-right">
        <%= link_to t("views.common.edit"), edit_pattern_path(@pattern) %> |
        <%= link_to t("views.common.back"), patterns_path %>
      </div>
    </div>
  </div>
