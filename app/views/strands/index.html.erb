<p id="notice"><%= notice %></p>

<h1>Listing Strands</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Length</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @strands.each do |strand| %>
      <tr>
        <td><%= strand.title %></td>
        <td><%= strand.description %></td>
        <td><%= image_tag strand.image.url(:medium)%></td>
        <% if session[:currency] == "RUB" %>
        <td><%= strand.price_rub %></td>
        <% else %>
        <td><%= strand.price_usd %></td>
        <% end %>
        <td><%= strand.length %></td>
        <td><%= strand.color %></td>
        <td><%= link_to 'Show', strand %></td>
        <td><%= link_to 'Edit', edit_strand_path(strand) %></td>
        <td><%= link_to 'Destroy', strand, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Add to Cart', create_strand_cart_item_path(id: strand.id), method: 'POST' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

