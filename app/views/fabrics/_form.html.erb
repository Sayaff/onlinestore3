<%= simple_form_for(@fabric) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :manufacturer %>
    <%= f.input :color %>
    <%= f.input :price_usd %>
    <%= f.input :price_rub %>
    <%= f.input :size %>
    <%= f.input :image, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
